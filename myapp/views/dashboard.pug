extends layout

block content
  h1 MakersBnB
  p Welcome Back #{name}
  h2 Dashboard

  a#addListing(href='http://localhost:3000/add') Add Listing

  for property in properties
    p #{property.name}: #{property.description} /#{property.price}
    if userid == property.user_id
      form(method='POST', action=`/`+property.id+`/edit`, id='editproperty', name='editproperty')
      <input type="submit" id="edit" value="edit"/>
    else
      form(method='POST', action=`/`+property.id+`/request`, id='requestproperty', name='requestproperty')
      <input type="submit" id="edit" value="request"/>
